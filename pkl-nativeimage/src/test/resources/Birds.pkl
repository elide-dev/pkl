module example.Birds

/// The birds that we know about.
birds: Mapping<String, Bird>

class Bird {
  /// The name of the bird
  name: String

  /// The bird's features
  features: Features
}

class Features {
  /// Can this bird mimick other sounds?
  voiceMimickry: Boolean

  /// Can this bird fly?
  flies: Boolean

  /// Can this bird swim?
  swims: Boolean
}
